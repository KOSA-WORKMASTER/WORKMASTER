<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="oracle.jdbc.driver.OracleDriver"/>
                <!--<property name="url" value="jdbc:oracle:thin:@localhost:1521:XE"/>-->
                <property name="url" value="jdbc:oracle:thin:@192.168.0.29:1521:XE?useUnicode=true&amp;characterEncoding=utf8"/>
                <property name="username" value="workmaster"/>
                <property name="password" value="workmaster"/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <!-- 매퍼 파일 위치 지정 -->
        <mapper resource="kr/or/sw/mapper/AuthMapper.xml"/>
    </mappers>
</configuration>
