<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.or.sw.mapper.ProductDAOImpl">
	<select id="selectAllProducts"
		resultType="kr.or.sw.model.ProductDTO">
		SELECT PRODUCTID,
		PRODUCTNAME,
		CATEGORY,
		PRICE,
		STOCK
		FROM PRODUCT
		ORDER BY PRODUCTID ASC
	</select>

	<select id="selectProductById" parameterType="_int"
		resultType="kr.or.sw.model.ProductDTO">
		SELECT PRODUCTID,
		PRODUCTNAME,
		CATEGORY,
		PRICE,
		STOCK
		FROM PRODUCT
		WHERE PRODUCTID = #{productID}
		ORDER BY PRODUCTID ASC
	</select>

	<select id="selectProductByCategory" parameterType="String"
		resultType="kr.or.sw.model.ProductDTO">
		SELECT PRODUCTID,
		PRODUCTNAME,
		CATEGORY,
		PRICE,
		STOCK
		FROM PRODUCT
		WHERE CATEGORY LIKE #{category}
		ORDER BY PRODUCTID ASC
	</select>

	<select id="selectProductByName" parameterType="String"
		resultType="kr.or.sw.model.ProductDTO">
		SELECT PRODUCTID,
		PRODUCTNAME,
		CATEGORY,
		PRICE,
		STOCK
		FROM PRODUCT
		WHERE PRODUCTNAME LIKE #{productName}
		ORDER BY PRODUCTID ASC
	</select>
	
	 <select id="selectProduct" parameterType="_int" resultType="kr.or.sw.model.ProductDTO">
        SELECT *
        FROM PRODUCT
        WHERE PRODUCTID = #{productID}
    </select>

	<insert id="insertProduct"
		parameterType="kr.or.sw.model.ProductDTO">
		INSERT INTO PRODUCT
		VALUES (PRODUCTID_SEQ.NEXTVAL, #{productName}, #{category}, #{price},
		#{stock})
	</insert>

	<insert id="insertProductImg"
		parameterType="kr.or.sw.model.ProductImgDTO">
		INSERT INTO PRODUCTIMG
		VALUES (#{uuid}, #{uploadPath}, #{fileName}, PRODUCTID_SEQ.CURRVAL)
	</insert>

	<update id="updateProduct"
		parameterType="kr.or.sw.model.ProductDTO">
		UPDATE PRODUCT
		SET PRICE = #{price},
			STOCK = #{stock}
		WHERE PRODUCTID = #{productID}
	</update>

	<delete id="deleteProduct" parameterType="_int">
		DELETE
		FROM PRODUCT
		WHERE PRODUCTID = #{productID}
	</delete>
</mapper>
